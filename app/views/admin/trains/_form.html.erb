<%= form_with(model: [:admin, @train], local: true) do |form| %>
  <%= render 'common/errors', resource: @train %>


  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number, id: :train_number %>
  </div>

  <div class="field">
    <%= form.label :route %>
    <%= form.collection_select :route_id, Route.all, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :current_station %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :sort_flag %>
    <%= form.check_box :sort_flag %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: @train.new_record? ? 'Создать' : 'Редактировать' ) %>
  </div>
<% end %>
