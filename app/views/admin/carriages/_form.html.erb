<%=  form_for [:admin, @train, carriage.becomes(Carriage)] , local: true do |form| %>
  <%= render 'common/errors', resource: carriage.becomes(Carriage) %>

  <div class="field">
    <%= form.label :type %><br>
    <%= form.select :type, Carriage::TYPE.invert.to_a  %>
  </div>

  <div class="hidden_carriage CoupeCarriage EconomyCarriage">
    <%= form.label :top_seats %><br>
    <%= form.number_field :top_seats %>
  </div>

  <div class="hidden_carriage CoupeCarriage EconomyCarriage PremiumCarriage">
    <%= form.label :bottom_seats %><br>
    <%= form.number_field :bottom_seats %>
  </div>

  <div class="hidden_carriage EconomyCarriage">
    <%= form.label :side_top_seats %><br>
    <%= form.number_field :side_top_seats %>
  </div>

  <div class="hidden_carriage EconomyCarriage">
    <%= form.label :side_bottom_seats %><br>
    <%= form.number_field :side_bottom_seats %>
  </div>

    <div class="hidden_carriage SeatCarriage">
    <%= form.label :seats %><br>
    <%= form.number_field :seats %>
  </div>

  <div class="actions">
    <%= form.submit  t('.submit', action: carriage.new_record? ? 'Создать' : 'Редактировать') %>
  </div>
<% end %>
