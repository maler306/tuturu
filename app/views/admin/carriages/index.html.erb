<p>
  <strong><%= t('admin.trains.attributes.train_number') %>:</strong>
  <%= @train.number %>
</p>

<strong><%= t('.title') %>:</strong>
<table>
  <thead>
    <tr>
      <th><%= t('admin.carriages.attributes.number') %></th>
      <th><%= t('admin.carriages.attributes.type') %></th>
      <th>Количество нижних мест</th>
      <th>Количество верхних мест</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carriages.sort{ |car1,car2| car1.number <=> car2.number }.each do |carriage| %>
      <%  @carriage=carriage %>
      <%= render 'carriage' %>
    <% end %>

  </tbody>
</table>

<p>
  <%= link_to 'Добавить вагон', new_admin_train_carriage_path(@train) %>
</p>

<p>
  <%= link_to 'Назад к поезду', admin_train_path(@train) %>
</p>
