<p>
  <strong>Номер поезда:</strong>
  <%= @train.number %>
</p>

<strong>Список вагонов:</strong>
<table>
  <thead>
    <tr>
      <th>Вагон №</th>
      <th>Тип вагона</th>
      <th>Количество нижних мест</th>
      <th>Количество верхних мест</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carriages.sort{ |car1,car2| car1.number <=> car2.number }.each do |carriage| %>
      <%  @carriage=carriage %>
      <%= render 'carriages/carriage' %>
    <% end %>

  </tbody>
</table>

<p>
  <%= link_to 'Добавить вагон', new_train_carriage_path(@train) %>
</p>

<p>
  <%= link_to 'Назад к поезду', train_path(@train) %>
</p>
