<%= form_with(model: [@train, @carriage] , local: true) do |form| %>

  <div class="field">
    <%= form.label :number %><br>
    <%= form.number_field :number %>
  </div>

  <div class="field">
    <%= form.label :type %><br>
    <%= form.select :type, Carriage::TYPE.invert.to_a  %>
  </div>

  <div class="field">
    <%= form.label :top_seats %><br>
    <%= form.number_field :top_seats %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %><br>
    <%= form.number_field :bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :side_top_seats %><br>
    <%= form.number_field :side_top_seats %>
  </div>

  <div class="field">
    <%= form.label :side_bottom_seats %><br>
    <%= form.number_field :side_bottom_seats %>
  </div>

    <div class="field">
    <%= form.label :seats %><br>
    <%= form.number_field :seats %>
  </div>

  <div class="actions">
    <%= form.submit "#{@carriage.new_record? ? 'Создать' : 'Редактировать'} "%>
  </div>
<% end %>
