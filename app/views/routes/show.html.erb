<p id="notice"><%= notice %></p>

<p>
  <strong>Маршрут:</strong>
  <%= @route.title %>
</p>

<p>
  <% if @trains.empty? %>
    <strong>Поездов на маршруте нет</strong>
  <% else %>
    <strong>Поезда на маршруте:</strong>
    <%= render 'trains/trains'  %>
  <% end %>
</p>

    <strong>Список станций маршрута:</strong>
<p>
  <% if @railway_stations.empty? %>
    <strong>станций в маршруте нет</strong>
  <% else %>
    <table>
      <thead>
      <tr>
        <td width="100px">Название</td>
        <td>Позиция</td>
        <td>Прибытие</td>
        <td>Отправление</td>
      </tr>
      </thead>
      <tbody>
      <% @route.railway_stations.ordered.each do |station| %>
          <tr>
            <td><%= station.title %></td>
            <td>
              <%= form_tag update_position_railway_station_path(station), method: :patch do %>
                <%= number_field_tag :position, station.attr_in(:position, @route) %>
                <%= hidden_field_tag :route_id, @route.id %>
                <%= submit_tag "Изменить" %>
                <% end %>
            </td>
            <td>
              <%= form_tag update_arrival_time_railway_station_path(station), method: :patch do %>
                <%= time_field_tag :arrival_time, station.attr_in(:arrival_time, @route) %>
                <%= hidden_field_tag :route_id, @route.id %>
                <%= submit_tag "Изменить" %>
                <% end %>
            </td>
            <td>
              <%= form_tag update_departure_time_railway_station_path(station), method: :patch do %>
                <%= time_field_tag :departure_time, station.attr_in(:departure_time, @route) %>
                <%= hidden_field_tag :route_id, @route.id %>
                <%= submit_tag "Изменить" %>
                <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</p>

<%= link_to 'Редактировать', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %>
